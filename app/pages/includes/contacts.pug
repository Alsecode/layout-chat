.h-100.hide-scrollbar.tab-pane.fade.show.active(id="contacts" role="tabpanel" aria-labelledby="contacts-tab")
  form.form-search.pt-5.px-4
    label.form-label.d-none(for="search-contacts")
    h2.fw-bold.mb-4 Контакты
    input(type="text", placeholder="Поиск по контактам", id="search-contacts").form-control.p-4.shadow-none.border-0.border-bottom
  .px-4
    each people, letter in contacts
        p.text-muted.mt-5.mb-3= letter
        each user in people
          a.contact(href).mb-3 
            img.avatar(src=user.avatar, alt="Аватар")
            .contact-info
              p.contact-name= user.name
              p.contact-status= user.status
